<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">#1A3963</item>
        <item name="titleTextColor">#1C3B65</item>
        <item name="android:textColorPrimary">#1C3B65</item>
        <item name="android:textColorSecondary">#1C3B65</item>
        <item name="actionMenuTextColor">#1C3B65</item>
    </style>

    <style name="pacient_nid">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_15dp</item>
        <item name="android:paddingTop">@dimen/dimen_5dp</item>
        <item name="android:paddingBottom">@dimen/dimen_5dp</item>
        <item name="android:paddingRight">@dimen/dimen_10dp</item>
    </style>

    <style name="us_content">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_10dp</item>
        <item name="android:paddingRight">@dimen/dimen_10dp</item>
    </style>

    <style name="pacient_info">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_10dp</item>
        <item name="android:paddingBottom">3dp</item>
    </style>


    <style name="pacient_name">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_15dp</item>
        <item name="android:padding">@dimen/dimen_5dp</item>
    </style>

    <!-- App Compat Alert Dialog Style -->
    <style name="StyleAppCompatAlertDialog">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:colorBackgroundCacheHint">@android:color/white</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="patient_activity_lists" parent="Base.CardView">
        <item name="android:textSize">@dimen/dimen_10dp</item>
    </style>

    <style name="input_labels">
        <item name="android:textColor">@color/input_labels</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_10dp</item>
        <item name="android:padding">@dimen/dimen_4dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_10dp</item>
    </style>

    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:typeface">sans</item>
    </style>

    <style name="MaterialSearchViewStyle">
        <!-- Background for the search bar-->
        <item name="searchBackground">@color/theme_primary</item>

        <!-- Change voice icon-->
        <item name="searchVoiceIcon">@drawable/ic_action_voice_search_inverted</item>

        <!-- Change clear text icon-->
        <item name="searchCloseIcon">@drawable/ic_action_navigation_close_inverted</item>

        <!-- Change up icon-->
        <item name="searchBackIcon">@drawable/ic_action_navigation_arrow_back_inverted</item>

        <!-- Change icon for the suggestions-->
        <item name="searchSuggestionIcon">@drawable/ic_suggestion</item>

        <!-- Change background for the suggestions list view-->
        <item name="searchSuggestionBackground">@android:color/white</item>

        <!-- Change text color for edit text. This will also be the color of the cursor-->
        <item name="android:textColor">@color/theme_primary_text_inverted</item>

        <!-- Change hint text color for edit text-->
        <item name="android:textColorHint">@color/theme_secondary_text_inverted</item>

        <!-- Hint for edit text-->
        <item name="android:hint">@string/search_hint</item>
    </style>

    <style name="login_text_style">
        <item name="android:textColor">@color/input_labels</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">@dimen/dimen_12dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_5dp</item>
    </style>

    <style name="bottom_border_edit_text_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bottom_border_edit_text_border</item>
        <item name="android:paddingLeft">@dimen/dimen_15dp</item>
        <item name="android:paddingRight">@dimen/dimen_15dp</item>
        <item name="android:paddingTop">@dimen/dimen_15dp</item>
        <item name="android:paddingBottom">@dimen/dimen_15dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_5dp</item>
    </style>

    <style name="bottom_spinner_style" parent="android:Widget.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_normal</item>
        <item name="android:paddingTop">@dimen/dimen_5dp</item>
        <item name="android:paddingBottom">@dimen/dimen_5dp</item>
        <item name="android:paddingLeft">@dimen/dimen_8dp</item>
        <item name="android:paddingRight">@dimen/dimen_50dp</item>
        <item name="android:popupBackground">@color/spinner_back_color</item>
        <item name="android:layout_marginBottom">@dimen/dimen_5dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="login_spinner_style" parent="android:Widget.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_spinner_back</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="spinner_style" parent="android:Widget.Spinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/login_spinner_back</item>
        <item name="android:paddingTop">@dimen/dimen_5dp</item>
        <item name="android:paddingBottom">@dimen/dimen_5dp</item>
        <item name="android:paddingLeft">@dimen/dimen_8dp</item>
        <item name="android:paddingRight">@dimen/dimen_50dp</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="spinner_label">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">sans</item>
        <item name="background">@color/white</item>
    </style>

</resources>