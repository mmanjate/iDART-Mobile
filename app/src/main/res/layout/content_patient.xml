<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="patient"
            type="mz.org.fgh.idartlite.model.Patient" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_person_24" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/nid_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:text="NID: "
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/pacient_nid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/nid"
                    android:layout_alignParentRight="true"
                    android:text="@{patient.nid}" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nid"
                    android:layout_alignParentLeft="true"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:text="@string/nome"/>

                <TextView
                    android:id="@+id/pacient_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/name"
                    android:layout_below="@+id/pacient_nid"
                    android:layout_alignParentRight="true"
                    android:text="@{patient.firstName}"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/name" />

                <TextView
                    android:id="@+id/apelido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_alignParentLeft="true"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:text="Apelido: "/>

                <TextView
                    android:id="@+id/pacient_apelido"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:layout_toRightOf="@id/apelido"
                    android:layout_alignParentRight="true"
                    android:text="@{patient.lastName}" />

                <TextView
                    android:id="@+id/genero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/apelido"
                    android:layout_alignParentLeft="true"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:text="Genero:"/>

                <TextView
                    android:id="@+id/pacient_genero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/apelido"
                    android:layout_toRightOf="@id/apelido"
                    android:layout_alignParentRight="true"
                    android:text="@{patient.gender}" />

                <TextView
                    android:id="@+id/idade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/genero"
                    android:layout_alignParentLeft="true"
                    android:gravity="right"
                    android:textStyle="bold"
                    android:text="Idade:"/>

                <TextView
                    android:id="@+id/pacient_idade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/genero"
                    android:layout_toRightOf="@id/apelido"
                    android:layout_alignParentRight="true"
                    android:text="@{patient.dateString}" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
</layout>