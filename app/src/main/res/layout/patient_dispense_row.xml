<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="dispense"
            type="mz.org.fgh.idartlite.model.Dispense" />

        <import type="mz.org.fgh.idartlite.util.Utilities"/>
        <import type="mz.org.fgh.idartlite.util.DateUtilitis"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                bind:srcCompat="@drawable/ic_prescription"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ID Prescrição"
                    android:textSize="@dimen/dimen_18dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/prescriptionId"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@{dispense.prescription.prescriptionSeq}"
                    android:paddingBottom="@dimen/dimen_10dp"
                    android:textSize="@dimen/dimen_18dp"
                    android:textStyle="bold"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:paddingLeft="@dimen/dimen_10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="3">

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/data_levantamento"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mes(es) de Dispensa:"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/dt_proximo_levantamento" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Medicamentos:"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/dimen_10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dataLevantamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{DateUtilitis.formatToDDMMYYYY(dispense.pickupDate)}" />

                    <TextView
                        android:id="@+id/supply"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{String.valueOf(dispense.supply)}" />

                    <TextView
                        android:id="@+id/dataProximoLevantamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{DateUtilitis.formatToDDMMYYYY(dispense.nextPickupDate)}" />

                    <TextView
                        android:id="@+id/linha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@{dispense.prescription.therapeuticLine.code}" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="@dimen/dimen_10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/dimen_22dp"
                        bind:srcCompat="@drawable/ic_baseline_autorenew_24"/>
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

    </LinearLayout>
</layout>